---
import BlogPostLayout from '../layouts/BlogPostLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  
  return posts.map((post) => {
    // Extract date parts from filename (e.g., "2025-07-27-title" -> "2025/07/27/title")
    const match = post.slug.match(/^(\d{4})-(\d{2})-(\d{2})-(.+)$/);
    if (!match) {
      // Fallback for posts without date prefix
      return {
        params: { slug: post.slug },
        props: { post }
      };
    }
    
    const [_, year, month, day, title] = match;
    const slug = `${year}/${month}/${day}/${title}`;
    
    return {
      params: { slug },
      props: { post }
    };
  });
}

const { post } = Astro.props;
const { Content } = await post.render();

// Parse date
const postDate = new Date(post.data.date);
---

<BlogPostLayout 
  title={post.data.title}
  date={postDate}
  summary={post.data.summary}
  description={post.data.summary || post.data.title}
  image={post.data.image_url}
>
  <Content />
</BlogPostLayout>