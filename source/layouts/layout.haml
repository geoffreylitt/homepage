/[if IE 8] <html class="no-js lt-ie9">
%html.no-js
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}

    -# To set titles and descriptions globally and for each individual page, see /DOCS.md
    %title= page_title
    %meta{:content => page_description, :name => "description"}
    %link{:rel => "shortcut icon", :type => "image/x-icon", :href => "/images/favicon.ico"}

    %meta{:content => "width=device-width", :name => "viewport"}

    %meta{:property => "og:title", :content => page_title}
    %meta{:property => "og:description", :content => page_description}
    %meta{:property => "og:image", :content => page_image}


    = javascript_include_tag "vendor/modernizr-2.6.1.min"
    = javascript_include_tag "site"
    = stylesheet_link_tag "site"
    = stylesheet_link_tag "https://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,700|Montserrat:700,400' rel='stylesheet' type='text/css"
    = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"
  %body
    /[if lt IE 10] <p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p>
    %header
      %a.logo{:href => '/'}
        = image_tag 'headshot.jpg', :width => '100%'
      %nav
        %h1.name
          %a{:href => '/'} Geoffrey Litt
        %ul.sections
          %li
            %a{:href => '/'} Home
          %li
            %a{:href => '/about.html'} About
          %li
            %a{:href => '/blog.html'} Blog
        %ul.contact
          %li
            %a{:href => 'http://www.github.com/geoffreylitt', :target => '_blank'}
              %i.fa.fa-github
          %li
            %a{:href => 'http://www.twitter.com/geoffreylitt', :target => '_blank'}
              %i.fa.fa-twitter
          %li
            %a{:href => 'mailto:gklitt@gmail.com', :target => '_blank'}
              %i.fa.fa-envelope

    .main_container
      .main= yield

    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"
    :javascript
      window.jQuery || document.write('<script src="javascripts/vendor/jquery-1.8.0.min.js"><\/script>')
    = javascript_include_tag "site"

