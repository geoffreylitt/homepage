.project-grid
  - projects.reject(&:hidden).each do |project|
    = link_to (project.link || "/projects/#{project.slug}.html"), class: "homepage-link" do
      .project
        .project-image= image_tag(project.image || "projects/#{project.slug}.png")
        %h3.project-title
          =project.name
          - if project.recent
            %span.recent New!
        .project-description= project.description
