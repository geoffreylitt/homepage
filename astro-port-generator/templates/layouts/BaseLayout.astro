---
export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title = "Geoffrey Litt", description = "", image = "/images/gradient.jpg" } = Astro.props;
const fullImageUrl = `https://geoffreylitt.com${image}`;

// Import the main SCSS file
import '../styles/site.css.scss';
---

<!DOCTYPE html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
